{
  "watch": ["src", "test"],
  "ext": "ts",
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "events": {
    "restart": "prettier --write --loglevel warn \"{src,test}/**/*.ts\"",
    "start": "prettier --write --loglevel warn \"{src,test}/**/*.ts\""
  },
  "env": {
    "NODE_ENV": "development"
  }
}
