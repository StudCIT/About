{
  "name": "server",
  "version": "0.0.1",
  "description": "description",
  "author": "Helsis",
  "license": "MIT",
  "engines": {
    "node": "10.15.1",
    "npm": "6.10.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "rimraf dist && npm run build && node dist/main.js",
    "postinstall": "npm run test && npm run doc && npm run start:prod",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "format": "prettier --write --loglevel warn \"{src,test}/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "doc": "npx compodoc",
		"test": "jest -i --coverage",
    "test:cov": "jest --watchAll --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest -i",
    "test:e2e": "jest --config ./test/jest-e2e.json --watchAll"
  },
  "dependencies": {
    "@nestjs/common": "latest",
    "@nestjs/core": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/swagger": "latest",
    "@nestjs/typeorm": "latest",
    "@types/bcrypt": "latest",
    "bcrypt": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "dotenv": "latest",
    "mysql": "latest",
    "passport": "latest",
    "passport-jwt": "latest",
    "reflect-metadata": "latest",
    "rimraf": "latest",
    "rxjs": "latest",
    "swagger-ui-express": "latest",
    "typeorm": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@compodoc/compodoc": "latest",
    "@nestjs/testing": "latest",
    "@types/dotenv": "latest",
    "@types/express": "latest",
    "@types/faker": "latest",
    "@types/jest": "latest",
    "@types/multer": "latest",
    "@types/node": "latest",
    "@types/passport-jwt": "latest",
    "@types/supertest": "latest",
    "@types/uuid": "latest",
    "faker": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "tslint": "latest"
  },
	"compodoc": {
		"open": true,
		"hideGenerator": true,
		"output": "./public",
	  "tsconfig": "./tsconfig.json",
		"unitTestCoverage": "./coverage/coverage-summary.json"
	},
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
		"notify": true,
		"verbose": true,
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node",
    "coverageDirectory": "../coverage",
		"coverageReporters": ["json-summary", "text"],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
