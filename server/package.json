{
  "name": "server",
  "version": "0.0.1",
  "description": "description",
  "author": "Helsis",
  "license": "MIT",
  "engines": {
    "node": "12.13.1",
    "npm": "6.13.3"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write --loglevel warn \"{src,test}/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "doc": "npx compodoc",
    "test": "jest -i --coverage",
    "test:cov": "jest --watchAll --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest -i",
    "test:e2e": "jest --config ./test/jest-e2e.json --watchAll"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.9",
    "@nestjs/core": "^6.10.9",
    "@nestjs/jwt": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "^6.10.9",
    "@nestjs/swagger": "^4.0.9",
    "@nestjs/typeorm": "latest",
    "@types/bcrypt": "latest",
    "bcrypt": "latest",
    "class-transformer": "latest",
    "class-validator": "^0.11.0",
    "dotenv": "latest",
    "mysql": "latest",
    "passport": "^0.4.1",
    "passport-jwt": "latest",
    "reflect-metadata": "latest",
    "rimraf": "latest",
    "rxjs": "latest",
    "swagger-ui-express": "^4.1.2",
    "typeorm": "^0.2.21",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@compodoc/compodoc": "latest",
    "@nestjs/testing": "^6.10.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.8",
    "@types/jest": "^24.0.23",
    "@types/multer": "latest",
    "@types/node": "^12.12.17",
    "@types/passport-jwt": "latest",
    "@types/supertest": "latest",
    "@types/uuid": "latest",
    "faker": "latest",
    "jest": "latest",
    "nodemon": "^2.0.1",
    "prettier": "^1.18.2",
    "supertest": "latest",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "latest",
    "tslint": "^5.20.1"
  },
  "compodoc": {
    "open": true,
    "hideGenerator": true,
    "output": "./public",
    "tsconfig": "./tsconfig.json",
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "notify": true,
    "verbose": true,
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node",
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
